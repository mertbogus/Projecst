@model CategoryVm

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h1>Yeni Kategori Ekle</h1>

<form asp-action="Add" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryDesc" class="control-label"></label>
        <input asp-for="CategoryDesc" class="form-control" />
        <span asp-validation-for="CategoryDesc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>
