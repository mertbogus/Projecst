@model IEnumerable<CategoryVm>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h1>Kategori Listesi</h1>

<a asp-action="Add" class="btn btn-primary">Yeni Kategori Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDesc</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
